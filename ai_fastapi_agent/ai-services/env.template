# Airavat Medical AI Assistant - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE API KEYS
# =============================================================================

# Google Gemini API Key (Required for AI medical consultations)
# GEMINI_API_KEY removed for security reasons

# Hugging Face API Token (Required for genetic analysis)
# HF_TOKEN=your_huggingface_token_here

# =============================================================================
# EMAIL SERVICE CONFIGURATION
# =============================================================================

# SMTP Server Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Email Sender Configuration
FROM_EMAIL=noreply@airavat.ai
FROM_NAME=Airavat Medical AI

# JWT Configuration for Email Verification and Password Reset
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Base URL for Email Links
BASE_URL=https://airavat-a3a10.web.app

# =============================================================================
# MCP DATABASE CONFIGURATION
# =============================================================================

# Database Type (alloydb or cloudsql)
MCP_DB_TYPE=alloydb

# AlloyDB Configuration
ALLOYDB_HOST=your_alloydb_host
ALLOYDB_PORT=5432
ALLOYDB_USER=your_alloydb_user
ALLOYDB_PASSWORD=your_alloydb_password
ALLOYDB_DATABASE=airavat_mcp

# CloudSQL Configuration (alternative to AlloyDB)
CLOUDSQL_HOST=your_cloudsql_host
CLOUDSQL_PORT=5432
CLOUDSQL_USER=your_cloudsql_user
CLOUDSQL_PASSWORD=your_cloudsql_password
CLOUDSQL_DATABASE=airavat_mcp

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================

# Firebase Service Account Key Path (for local development)
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=airavat-a3a10-firebase-adminsdk-fbsvc-7b24d935c3.json

# =============================================================================
# BACKGROUND TASKS & CACHING
# =============================================================================

# Redis Configuration (for Celery background tasks)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Prometheus Metrics Endpoint
PROMETHEUS_ENDPOINT=/metrics

# =============================================================================
# SECURITY & CORS
# =============================================================================

# CORS Origins (comma-separated)
CORS_ORIGINS=https://airavat-a3a10.web.app,https://airavat-a3a10.firebaseapp.com,http://localhost:3000

# =============================================================================
# GENETIC ANALYSIS CONFIGURATION
# =============================================================================

# Maximum file size for genetic reports (in bytes)
MAX_FILE_SIZE=10485760

# Supported file types for genetic analysis
SUPPORTED_FILE_TYPES=pdf,txt,csv,json,vcf,fasta,fastq

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Default notification preferences
DEFAULT_EMAIL_NOTIFICATIONS=true
DEFAULT_PUSH_NOTIFICATIONS=true
DEFAULT_SMS_NOTIFICATIONS=false

# Notification retry settings
NOTIFICATION_MAX_RETRIES=3
NOTIFICATION_RETRY_DELAY=300

# =============================================================================
# TASK MANAGEMENT CONFIGURATION
# =============================================================================

# Default task reminder times (in minutes before due date)
DEFAULT_REMINDER_TIME=60
DEFAULT_OVERDUE_TIME=30

# Maximum tasks per user
MAX_TASKS_PER_USER=100

# =============================================================================
# USER DATA CONFIGURATION
# =============================================================================

# Data retention period (in days)
DEFAULT_DATA_RETENTION_DAYS=2555

# Maximum file uploads per user
MAX_UPLOADS_PER_USER=50

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================

# API rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Cache TTL (in seconds)
CACHE_TTL=3600

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=false

# Test mode
TEST_MODE=false

# =============================================================================
# GOOGLE CLOUD CONFIGURATION
# =============================================================================

# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=airavat-a3a10

# Cloud Run Service Name
SERVICE_NAME=airavat-backend

# Cloud Run Region
REGION=us-central1

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_EMAIL_SERVICE=true
ENABLE_GENETIC_ANALYSIS=true
ENABLE_NOTIFICATIONS=true
ENABLE_TASK_MANAGEMENT=true
ENABLE_MCP_DATABASE=true
ENABLE_MONITORING=true

# =============================================================================
# INTEGRATION KEYS (Optional)
# =============================================================================

# Twilio SMS (for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# SendGrid (alternative email service)
SENDGRID_API_KEY=your_sendgrid_api_key

# Stripe (for payments)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================

# Google Analytics
GA_TRACKING_ID=your_ga_tracking_id

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================

# Backup frequency (in hours)
BACKUP_FREQUENCY=24

# Backup retention (in days)
BACKUP_RETENTION_DAYS=30

# =============================================================================
# COMPLIANCE & PRIVACY
# =============================================================================

# HIPAA Compliance
HIPAA_COMPLIANCE_MODE=true

# Data encryption
ENCRYPTION_ENABLED=true

# Audit logging
AUDIT_LOGGING_ENABLED=true

# =============================================================================
# CUSTOMIZATION
# =============================================================================

# Custom branding
BRAND_NAME=Airavat
BRAND_COLOR=#667eea
BRAND_LOGO_URL=https://example.com/logo.png

# Custom email templates
CUSTOM_EMAIL_TEMPLATES_ENABLED=false
CUSTOM_EMAIL_TEMPLATES_PATH=/templates

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Service version
SERVICE_VERSION=2.0.0

# Build number
BUILD_NUMBER=1

# Deployment environment
DEPLOYMENT_ENV=production 